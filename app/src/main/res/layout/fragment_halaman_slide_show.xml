<ViewFlipper xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="rpro.com.surveykantinnestle.HalamanSlideShow"
    android:id="@+id/viewFlipper_halamanSlideShow"
    android:autoStart="true">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/slide_1"
        android:src="@drawable/slide_0"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/slide_2"
        android:src="@drawable/slide_3"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/slide_3"
        android:src="@drawable/slide_2"
        />

</ViewFlipper>
