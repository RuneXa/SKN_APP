<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Silahkan Pilih Perintah : "
        style="@style/Base.AlertDialog.AppCompat"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dialog_send"
        android:text="Kirim Report"
        style="@style/Base.Widget.AppCompat.Button.ButtonBar.AlertDialog"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dialog_truncate"
        android:text="Hapus Semua Record"
        style="@style/Base.Widget.AppCompat.Button.ButtonBar.AlertDialog"/>


</LinearLayout>